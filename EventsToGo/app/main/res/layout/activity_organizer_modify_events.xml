<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="Edit Event Details"
    tools:context=".screens.OrganizerModifyEventsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/menu_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/themeColor"
            app:title="New Event"
            app:titleTextColor="@color/white" />

        <LinearLayout
            android:id="@+id/llEditableEventDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Availbility"
                    android:visibility="gone" />

                <Switch
                    android:id="@+id/swEAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:checked="true"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <EditText
                android:id="@+id/etEName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad Display" />

            <EditText
                android:id="@+id/etEAdDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ad Display"
                android:inputType="textCapSentences"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <EditText
                android:id="@+id/etEDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:hint="Description"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="48dp"
                android:scrollbars="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Schedule" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etEStartScheduleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="MM/dd/yyyy"
                    android:inputType="date"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/etEStartScheduleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="hh:mm"
                    android:inputType="time"
                    android:minHeight="48dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Schedule" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etEEndScheduleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="MM/dd/yyyy"
                    android:inputType="date"
                    android:minHeight="48dp" />

                <EditText
                    android:id="@+id/etEEndScheduleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="hh:mm"
                    android:inputType="time"
                    android:minHeight="48dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

            <EditText
                android:id="@+id/etEPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Slots" />

            <EditText
                android:id="@+id/etESlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Slots"
                android:inputType="number"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building" />

            <EditText
                android:id="@+id/etEBuilding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Building"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street" />

            <EditText
                android:id="@+id/etEStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City" />

            <EditText
                android:id="@+id/etECity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country" />

            <EditText
                android:id="@+id/etECountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:inputType="textCapWords"
                android:minHeight="48dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnEOpenCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/themeColor"
                android:layout_marginTop="8dp"
                android:text="Upload Photo" />

            <TextView
                android:id="@+id/tvEImageLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Photo required"
                android:textColor="@color/red"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etEImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Image"
                android:minHeight="48dp"
                android:singleLine="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgEImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp" />

            <Button
                android:id="@+id/btnEAddEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/themeColor"
                android:text="ADD EVENT" />

            <Button
                android:id="@+id/btnEUpdateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/themeColor"
                android:text="SAVE"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnEDeleteEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:text="DELETE"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>